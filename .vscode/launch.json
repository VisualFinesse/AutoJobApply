{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}tests/example.spec.ts", // Replace with the path to your script
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**",
        "${workspaceFolder}/node_modules/@playwright/test/lib/**",
        "${workspaceFolder}/node_modules/playwright/**"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
